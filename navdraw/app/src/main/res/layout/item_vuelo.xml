<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imagen_vuelo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_lima" /> <!-- Puedes usar un ícono de vuelo aquí -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/origen_destino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desde Cusco a Lima"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/precio_vuelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD 25.77 / PEN 97.23"
            android:textSize="16sp"
            android:textColor="#FF6200EE" />

        <TextView
            android:id="@+id/detalles_vuelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solo ida - Economy"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
